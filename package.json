{
  "name": "dawn-tools",
  "displayName": "Dawn Tools",
  "description": "Dawn Tools",
  "publisher": "jian-qin",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dawn-tools.file.name.copy",
        "title": "复制文件名"
      },
      {
        "command": "dawn-tools.file.import.path.relative",
        "title": "引入相对路径"
      },
      {
        "command": "dawn-tools.file.import.path.absolute",
        "title": "引入绝对路径"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dawn-tools.file.name.copy",
          "group": "0_0@1"
        },
        {
          "command": "dawn-tools.file.import.path.relative",
          "group": "0_0@2"
        },
        {
          "command": "dawn-tools.file.import.path.absolute",
          "group": "0_0@3"
        }
      ],
      "editor/title/context": [
        {
          "command": "dawn-tools.file.name.copy",
          "group": "1_cm@1"
        },
        {
          "command": "dawn-tools.file.import.path.relative",
          "group": "1_cm@2"
        },
        {
          "command": "dawn-tools.file.import.path.absolute",
          "group": "1_cm@3"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+shift+a",
        "command": "dawn-tools.html.format",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+shift+c",
        "command": "dawn-tools.html.attr.copy",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+shift+d",
        "command": "dawn-tools.html.attr.delete",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+shift+v",
        "command": "dawn-tools.html.attr.paste",
        "when": "editorTextFocus"
      },
      {
        "key": "alt+q",
        "command": "dawn-tools.snippets.log",
        "when": "editorTextFocus"
      },
      {
        "key": "shift+alt+q",
        "command": "dawn-tools.snippets.log.before",
        "when": "editorTextFocus"
      },
      {
        "key": "alt+oem_2",
        "command": "dawn-tools.other.symbol",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "hyntax": "^1.1.9",
    "posthtml-parser": "^0.12.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jian-qin/dawn-tools.git"
  },
  "author": "jian-qin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jian-qin/dawn-tools/issues"
  },
  "homepage": "https://github.com/jian-qin/dawn-tools#readme"
}
